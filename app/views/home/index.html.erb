<%= form_tag ideas_path, id: 'createIdea' do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
  <%= label_tag :body %>
  <%= text_field_tag :body %>
  <%= submit_tag 'Save' %>
<% end %>

<%= form_tag do %>
  <%= label_tag :search %>
  <%= text_field_tag :search %>
<% end %>

<ul class="ideas">

</ul>

<%= form_tag ideas_path, id: 'secretForm' do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
  <%= label_tag :body %>
  <%= text_field_tag :body %>
  <%= hidden_field_tag :id %>
  <%= submit_tag 'Save' %>
<% end %>

<script>
  $(function() {
    $('form#createIdea').submit(Ideas.create);
    $('form#secretForm').submit(Ideas.update);
    Ideas.loadAll();
    $('.ideas').on('click', 'button.edit', Ideas.showForm);
    $('.ideas').on('click', 'button.delete', Ideas.delete);
    $('.ideas').on('click', 'button.thumbsUp', Ideas.ratingUp);
    $('.ideas').on('click', 'button.thumbsDown', Ideas.ratingDown);
    $('input[name=search]').keyup(Ideas.search)
  });
</script>